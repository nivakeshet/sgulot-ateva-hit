/*רקע אתר*/
body {
    direction: rtl;
    background: #f9f9ef url('../imeges/aliim1.png') no-repeat top fixed;
    background-size: 100%;
}

/*כל התוכן בקונטיינר*/
#contaner {
    margin: 0 auto;
    width: 960px;
}

/*לוגו*/
#logo {
    height:220px;
    width: 550px;
    margin: auto;
}

#logoimg {
    background: url(../imeges/logo.png) no-repeat center;
    height: 200px;
    background-size: 550px;
}

#logoimg h1 {
    padding: 13px 15px 0px 0px;
    color: #825BB4;
    text-decoration: none;
    text-align: center;
    font-weight: bold;
    font-size: 35px;
    font-family: 'Heebo', sans-serif;
    }

#logo :hover {
    text-decoration: none;
}

#logoimg p {
    padding: 10px 15px 0px 0px;
    text-align: center;
    color:#487027;
    font-family: 'Heebo', sans-serif;
}

.logoHref{
   text-decoration: none;
}

/*תפריט ניווט ראשי */

#tabs ul {
    list-style: none;
}

#tabs ul li {
    display: inline-block;
    float: right;
}

#tabs ul li a {
    display: block;
    background-color: #AEBF3C;
    color: #404040;
    text-decoration: none;
    text-align: center;
    width: 240px;
    height: 47px;
    Padding-top: 13px;
    font-size:20px;
    font-family: 'Heebo', sans-serif;

   -webkit-box-sizing: border-box; 
   -moz-box-sizing: border-box;
    box-sizing: border-box; 
}

.separator {
    width: 945px;
    margin-top: 50px;
    box-shadow: 3px -1px 5px 2px rgba(226, 221, 84, 0.52);
}


 /*במעבר עכבר על התפריט*/
#tabs ul li:hover a {
    background-color:#e2dd54;
}


 /*עמוד שנבחר בתפריט*/
 #tabs ul li a.selected {
    background-color: #e2dd54;
    text-decoration: underline;
    font-size:23px;
    padding-top:12px;
}

/*בלחיצה על משהו בתפריט*/
#tabs ul li a:active {
    background-color:#e2dd54;
}
/*תפריט כאבים*/
#tabs ul li ul {
    display: none;
    position: absolute;
    box-shadow: 3px 6px 10px 2px rgba(226, 221, 84, 0.52);
}

#tabs ul li:hover ul {
    display: block;
    width: 240px;
}

#tabs ul li:hover ul li a {
    background-color: #AEBF3C;
}

#tabs ul li:hover ul li a:hover {
    background-color: #e2dd54;
}

/*הגדרות לתפריט צמחים שנפתח
*/
#tabs ul li#chema ul {
     width: 720px;
     background-color: #AEBF3C;
     box-shadow: 3px 6px 10px 2px rgba(226, 221, 84, 0.52);
}

#tabs ul li#chema ul li {
     display: inline;
}


/*הגדרות לקרוסלה*/
#carousel-example-generic {
    position:relative;
    z-index: -1;
    height: 500px;
    width:960px;
    background-color: rgba(255, 246, 198, 0.80);
    margin: 30px 0px 310px 0px;
}

/*דף בית - סגולות הצמחים*/

#sgulot{
    display:block;
    background: url(../imeges/homeSgulot.png) no-repeat;
    height:330px;
    width:960px;
    padding:100px 30px 0px 40px;
}
#sgulot h2{
    color: #825BB4;
    font-size:35px;
    padding: 30px 180px 0px 0px;
    font-family: 'Heebo', sans-serif;
}
#sgulot p{
    color: #404040;
    font-size:20px;
    line-height:50px;
    padding: 10px 180px 0px 0px;
    font-family: 'Heebo', sans-serif;
}

#sgulot:hover{
    text-decoration:none;
}



/*פוטר*/
footer{
    position:absolute;
    display:block;
    background-color:#AEBF3C;
    width:960px;
    height:50px;
    bottom:0px;
}

footer li, footer ul{
    list-style: none;
    display:inline-block;
    padding:10px 180px 0px 0px;
    font-family: 'Heebo', sans-serif;
}
footer p {
    display:inline-block;
    position:absolute;
    padding:20px 10px 0px 0px;
    font-family: 'Heebo', sans-serif;
}



