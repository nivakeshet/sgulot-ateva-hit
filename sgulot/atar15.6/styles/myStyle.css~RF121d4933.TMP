/*תפריט ניווט ראשי */

#tabs ul {
    list-style: none;
   /*הגדרת רוחב ומרכוז התפריט לאמצע*/
    width: 960px;
    margin: 0 auto;
}

#tabs ul li {
    display: inline-block;
    float: right;
}

#tabs ul li a {
    display: block;
    background-color: #AEBF3C;
    color: #404040;
    text-decoration: none;
    text-align: center;
    width: 239px;
    height: 41px;
    Padding-top: 11px;

   -webkit-box-sizing: border-box; 
   -moz-box-sizing: border-box;
    box-sizing: border-box; 
}

 /*במעבר עכבר על התפריט*/
#tabs ul li:hover a {
    background-color:#e2dd54;
}


 /*עמוד שנבחר בתפריט*/
 #tabs ul li a.selected {
    background-color: #e2dd54;
    text-decoration: underline;
    font-size:20px;
    padding-top:9px;
}

/*בלחיצה על משהו בתפריט*/
#tabs ul li a:active {
    background-color:#e2dd54;
}



#tabs ul li ul {
    display: none;
    position: absolute;
    box-shadow: 3px 6px 10px 2px rgba(226, 221, 84, 0.52);
}

#tabs ul li:hover ul {
    display: block;
    width: 239px;
}

#tabs ul li:hover ul li a {
    background-color: #AEBF3C;
}

#tabs ul li:hover ul li a:hover {
    background-color: #e2dd54;
}


            /*הגדרות לתפריט צמחים שנפתח
    לשנות את הצבע
*/
#tabs ul li#chema ul {
     width: 718px;
     background-color: #AEBF3C;
     box-shadow: 3px 6px 10px 2px rgba(226, 221, 84, 0.52);
}

#tabs ul li#chema ul:hover {
     width: 720px;
}

#tabs ul li#chema ul li {
     display: inline;
}

.separator {
    width: 945px;
    margin-top: 43px;
